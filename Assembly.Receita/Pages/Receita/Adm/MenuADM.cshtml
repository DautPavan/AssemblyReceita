                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Receita/Teste/teste7">Teste7</a>
                </li>
*@
            </ul>
        </div>

        <div>
            <ul class="navbar-nav justify-content-sm-start all">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="text-dark"> || User: @role</li>
                }
            </ul>
        </div>

    </div>
</nav>



