
<!-- MENU PRINCIPAL LOGADO -->

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0" style="height: 50px; margin: 0; padding: 0">

    <div class="container-fluid"  style="padding-left: 15px; padding-right: 15px">
        
        <a class="navbar-brand" asp-area="" asp-page="/Index">Home</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-sm-start" style="margin: 0; padding: 0">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Receita/Site" asp-page="">Quem Somos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Receita/Site" asp-page="/Receita/Site/Privacy">Politica</a>
                </li>
            </ul>
        </div>

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-sm-end">
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a class="nav-link text-danger" asp-area="" asp-page="/Index">Olá @User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-page="/IndexADM">Adm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-page="/Login/Logout">Logout</a>
                    </li>
                }

                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-area="" asp-page="/Login/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-area="" asp-page="/Login/Register">Register</a>
                    </li>
                }
            </ul>
        </div>

    </div>
</nav>
